@page
@model RazorPagesWeb.Pages.Stock.IndexModel
@{
    ViewData["Title"] = "Stock";
}

<h1>Stock Status</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Stock
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WaterStock)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Key.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
            </tr>
        }
    </tbody>
</table>
