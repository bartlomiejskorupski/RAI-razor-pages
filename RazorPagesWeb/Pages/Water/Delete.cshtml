@page
@model RazorPagesWeb.Pages.Water.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Water</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.Type.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.pH)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.pH)
        </dd>
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Water.Cations)
        </dt>
        @foreach (var ion in Model.Water.Cations)
        {
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ion.DisplayName)
            </dd>
        }
        <dt class="col-sm-12">
            @Html.DisplayNameFor(model => model.Water.Anions)
        </dt>
        @foreach (var ion in Model.Water.Anions)
        {
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => ion.DisplayName)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Mineralization)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.Mineralization)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Packaging)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Water.Packaging.DisplayName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Water.Picture)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Water.Picture)" width="200" />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Water.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
