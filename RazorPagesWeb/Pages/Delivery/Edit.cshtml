@page
@model RazorPagesWeb.Pages.Delivery.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Delivery.Id" />
            <div class="form-group">
                <label asp-for="Delivery.EmployeeName" class="control-label"></label>
                <input asp-for="Delivery.EmployeeName" class="form-control" />
                <span asp-validation-for="Delivery.EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.SupplierID" class="control-label"></label>
                <select asp-for="Delivery.SupplierID" class="form-control" asp-items="ViewBag.SupplierID"></select>
                <span asp-validation-for="Delivery.SupplierID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.ItemsPerPallet" class="control-label"></label>
                <input asp-for="Delivery.ItemsPerPallet" class="form-control" />
                <span asp-validation-for="Delivery.ItemsPerPallet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.DeliveryDate" class="control-label"></label>
                <input asp-for="Delivery.DeliveryDate" class="form-control" />
                <span asp-validation-for="Delivery.DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
